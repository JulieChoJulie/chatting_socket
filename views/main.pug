extends layout

block content
    h1 GIF CHAT
    fieldset
        legend Chatroom list
        table
            thead
                tr
                    th chatroom title
                    th type
                    th max. occup
                    th leader
            tbody
                for room in rooms
                    tr(data-id=room._id)
                        td= room.title
                        td= room.password ? 'Secret Chatroom' : 'Public Chatroom'
                        td= room.max
                        td(style='color:' +room.owner)= room.owner
                        -var password = room.password ? 'true' : 'false'
                        td: button(data-password=password data-id=room._id).join-btn Join
        .error-message= error
        a(href='/room') Create a new chat
        script(src='/socket.io/socket.io.js)
        script.